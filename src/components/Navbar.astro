---
const navlist = document.querySelector(".navlist");
const toggler = document.querySelector(".toggler");

toggler?.addEventListener("click", () => {
	navlist?.classList.toggle("hidden");
});
---
<div class="sticky top-0 z-50 w-full bg-bg p-4 md:flex md:items-center md:justify-between md:p-8 lg:px-16">
    <div class="flex items-center justify-between">
        <a class="flex cursor-pointer items-center" href="/">
            <span class="cursor-pointer text-2xl font-bold text-fg antialiased">
                imide
            </span>
            <span class="cursor-pointer text-2xl font-bold text-primary antialiased">
                .xyz
            </span>
        </a>
        <span class="toggler self-center">
            <i class="text-2xl cursor-pointer block md:hidden text-primary ph-light ph-list"/>
        </span>
    </div>
    <ul class={`md:flex md:items-center ml-0 z-[-1] md:z-auto navlist list-none hidden sm:visible transition-all duration-400 md-static ms:absolute`}>
        <li class="nav-li">
            <a class="nav-a" href="/">/~</a>
        </li>
        <li class="nav-li">
            <a class="nav-a" href="/me">/me</a>
        </li>
        <li class="nav-li">
            <a class="nav-a" href="/rants">/rants</a>
        </li>
        <li class="nav-li">
            <a class="nav-a" href="/projects">/projects</a>
        </li>
    </ul>
</div>